<Window x:Class="OutLines___Alpha.AddUchenikWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OutLines___Alpha"
        mc:Ignorable="d"
        Title="AddWindow" Height="465" Width="510" WindowStyle = "None"
        Background="{x:Null}" AllowsTransparency="True">
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Border Background="White" CornerRadius="25" BorderThickness="0" Margin="0,0,0,0">
            <StackPanel Margin="50">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                    <Label Content="ID" HorizontalAlignment="Left" FontFamily = "century gothic"
                            FontSize = "16"/>
                    <TextBox x:Name="ID" Height="25" Margin="0,0,0,0"
                            FontFamily = "century gothic"
                            FontSize = "16" Width="300"/>
                    </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                    <Label Content="Фамилия" HorizontalAlignment="Left" FontFamily = "century gothic"
                            FontSize = "16"/>
                    <TextBox x:Name="Фамилия" Height="25" Margin="0,0,0,0"
                            FontFamily = "century gothic"
                            FontSize = "16" Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                    <Label Content="Имя" HorizontalAlignment="Left" FontFamily = "century gothic"
                            FontSize = "16"/>
                    <TextBox x:Name="Имя" Height="25" Margin="0,0,0,0"
                            FontFamily = "century gothic"
                            FontSize = "16" Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                    <Label Content="Отчество" HorizontalAlignment="Left" FontFamily = "century gothic"
                            FontSize = "16"/>
                    <TextBox x:Name="Отчество" Height="25" Margin="0,0,0,0"
                            FontFamily = "century gothic"
                            FontSize = "16" Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                    <Label Content="Рождение" HorizontalAlignment="Left" FontFamily = "century gothic"
                            FontSize = "16"/>
                    <TextBox x:Name="ГодРож" Height="25" Margin="0,0,0,0"
                            FontFamily = "century gothic"
                            FontSize = "16" Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                    <Label Content="Поступление" HorizontalAlignment="Left" FontFamily = "century gothic"
                            FontSize = "16"/>
                    <TextBox x:Name="ГодПос" Height="25" Margin="0,0,0,0"
                            FontFamily = "century gothic"
                            FontSize = "16" Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                    <Label Content="Пол" HorizontalAlignment="Left" FontFamily = "century gothic"
                            FontSize = "16"/>
                    <TextBox x:Name="Пол" Height="25" Margin="0,0,0,0"
                            FontFamily = "century gothic"
                            FontSize = "16" Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                    <Label Content="Адрес" HorizontalAlignment="Left" FontFamily = "century gothic"
                            FontSize = "16"/>
                    <TextBox x:Name="Адрес" Height="25" Margin="0,0,0,0"
                            FontFamily = "century gothic"
                            FontSize = "16" Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                    <Label Content="Город" HorizontalAlignment="Left" FontFamily = "century gothic"
                            FontSize = "16"/>
                    <TextBox x:Name="Город" Height="25" Margin="0,0,0,0"
                            FontFamily = "century gothic"
                            FontSize = "16" Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                    <Label Content="Телефон" HorizontalAlignment="Left" FontFamily = "century gothic"
                            FontSize = "16"/>
                    <TextBox x:Name="Телефон" Height="25" Margin="0,0,0,0"
                            FontFamily = "century gothic"
                            FontSize = "16" Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                    <Label Content="Код водителя" HorizontalAlignment="Left" FontFamily = "century gothic"
                            FontSize = "16"/>
                    <TextBox x:Name="КодВод" Height="25" Margin="0,0,0,0"
                            FontFamily = "century gothic"
                            FontSize = "16" Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="AddButton" Style="{StaticResource RoundedButton}" Height="35" Width="125"
                            Margin="0,0,25,0"
                            FontFamily = "century gothic"
                            FontSize = "16"
                            Background="White"
                            BorderThickness="2"
                            BorderBrush="LightGreen"      
                            Content = "Добавить" Click="AddButton_Click" 
                />
                    <Button x:Name="CloseButton" Style="{StaticResource RoundedButton}" Height="35" Width="125"
                            FontFamily = "century gothic"
                            FontSize = "16"
                            Content = "Отмена"
                            Background="White"
                            BorderThickness="2"
                            BorderBrush="Red"    
                            Click="CloseButton_Click"   
                />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
